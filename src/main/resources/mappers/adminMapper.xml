<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.deataworld.adminMapper">

	<!-- 전체 구직자 수 -->
	<select id="employeeCnt" resultType="java.lang.Integer">
		select count(*) from employee
	</select>
	
	<!-- 구직자 회원 조회(페이징 처리) -->
	<select id="employeeList" resultType="EmployeeDTO">
		select
			e_id,	<!-- ID -->
			e_nick,	<!-- 닉네임 -->
			date(e_regdate) as e_regdate, <!-- 가입일 -->
			e_warned,	<!-- 경고상태 -->
			e_number	<!-- 구직자 번호(상세정보) -->
		from employee
		order by e_number desc
		limit #{pageStart}, #{pagePerList}
	</select>
	
</mapper>