<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.deataworld.employerMapper">
	<!-- 내 정보보기 -->
	<select id="myInfo" parameterType="String" resultType="kr.co.deataworld.dto.EmployerDTO">
		select *
		from employer
		where r_id = #{id}
	</select>
	
	<!-- 내 정보수정 -->
	<update id="myInfoUpdate" parameterType="kr.co.deataworld.dto.EmployerDTO">
		update daetaworld.employer 
		set r_nick = #{r_nick}, r_password = #{r_password}, r_phone = #{r_phone}, 
			r_address1 = #{r_address1}, r_address2 = #{r_address2}, 
			r_terms1 = #{r_terms1}, r_terms2 = #{r_terms2}, r_picture = #{r_picture},
			r_email = #{r_email}
		where (r_number = #{r_number});
	</update>
	
	<!-- 등록한 가게 목록보기 -->
	<select id="shopManagement" parameterType="String" resultType="kr.co.deataworld.dto.ShopInfoDTO">
		select *
		from shop_info
		where r_id = #{id}
	</select>
	
	<!-- 등록한 가게 정보보기 -->
	<select id="shopInfo" parameterType="String" resultType="kr.co.deataworld.dto.ShopInfoDTO">
		select *
		from shop_info
		where s_name = #{s_name}
	</select>
	
</mapper>